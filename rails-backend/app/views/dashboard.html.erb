  <script>

  function draw(leaders){
    var ctx = document.getElementById("myChart").getContext('2d');
    var graph_data = leaders.graph_data;

    data = {
            labels: graph_data.leaders,

            datasets: [{
                label: '# of Votes',
                data: graph_data.leader_counts,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.8)',
                    'rgba(54, 162, 235, 0.8)',
                    'rgba(255, 206, 86, 0.8)',
                    'rgba(75, 192, 192, 0.8)',
                    'rgba(153, 102, 255, 0.8)',
                    'rgba(255, 159, 64, 0.8)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        };

    var myChart = new Chart(ctx, {
        type: 'pie',
        data: data,
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });  
  }

  function fetchAndDraw(){
    $.get('/all_votes', function(response){
      console.log(response);
      if(response.success == true){
        draw(response);
      }
      
    });
  }

  window.onload = fetchAndDraw();
  
  </script>

